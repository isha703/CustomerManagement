# Dummy example config - DO NOT USE IN PRODUCTION
spring:
  datasource:
    url: jdbc:postgresql://localhost:5432/custdb
    username: dbuser
    password: dbpass
  jpa:
    hibernate:
      ddl-auto: validate
    show-sql: false

jwt:
  secret: "REPLACE_WITH_BASE64_32_BYTES_SECRET=="
  expires-in: 900            # 15 minutes
  refresh-expires-in: 1209600 # 14 days in seconds

app:
  cors:
    allowed-origins:
      - http://localhost:3000
  cookies:
    secure: false

server:
  servlet:
    session:
      timeout: 30m

# Flyway / DB migration placeholders
flyway:
  enabled: true
  locations: classpath:db/migration

logging:
  level:
    com.example.custmanagement: INFO
